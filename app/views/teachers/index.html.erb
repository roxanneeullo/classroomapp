
<h1>Teachers</h1>

<div class="container">
	<div class="row custyle">
		<h3 class="text-center">Teachers</h3>
		<div id="no-more-tables">
			<table class="col-md-12 table-bordered table-striped table-condensed cf">
  			<thead class="cf">
    			<tr>
      			<th>User ID</th>
						<th>Teacher ID</th>
      			<th>First Name</th>
						<th>Last Name</th>
						<th>Department</th>
						<th>Status</th>
						<th>Block</th>
						<th>View</th>
						<th>Edit</th>
						<th>Delete</th>
    			</tr>
  			</thead>
  			<tbody>
					  <% @teachers.each do |teacher| %>
						<tr>
				  		<td data-title="User ID"><%= teacher.user_id %></td>
							<td data-title="Teacher ID"><%= teacher.user.id %></td>
							<td data-title="First Name"><%= teacher.user.first_name %></td>
							<td data-title="Last Name">	<%= teacher.user.last_name %></td>
							<td data-title="Department"><%= teacher.department.name %></td>
							<td data-title="Status"><%= teacher.status %></td>
							<td data-title="Block">
								<% if teacher.block_id.blank? %>
									
								<% else %>	
									<%= teacher.block.name %>
								<% end%>	
							</td>
			        <td data-title="View"><%= link_to '<button type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-search"></span></button>'.html_safe, teacher %></td>
							<td data-title="Edit"><%= link_to '<button type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-edit"></span></button>'.html_safe, edit_teacher_path(teacher) %></td>
							
			        <td data-title="Delete"><%= link_to '<button type="button" class = "btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>'.html_safe, teacher, method: :delete, 
																data: { confirm: 'Are you sure you want to delete this teacher?' } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
			
