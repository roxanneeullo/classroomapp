
<%= render 'form', subject: @subject %>
<br>
<div class="container">
	<div class="row custyle">
		<h3 class="text-center">Subjects</h3>
		<div id="no-more-tables">
			<table class="col-md-8 col-md-offset-1 table-bordered table-striped table-condensed cf">
  			<thead class="cf">
    			<tr>
      			<th>ID</th>
						<th>Name</th>
						<th>Destroy</th>
    			</tr>
  			</thead>
  			<tbody>
					 <% @subjects.each do |subject| %>
						<tr>
							<td data-title="ID"><%= subject.id %></td>
							<td data-title="Name"><%= subject.name %></td>
			        <td data-title="Delete"><%= link_to '<button type="button" class = "btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>'.html_safe, subject, method: :delete, 
																data: { confirm: 'Are you sure you want to delete this department?' } %></td>
						</tr>
						
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
