
<div class="container">
	<div class="row custyle">
		<h3 class="text-center">Students</h3>
		<div class="container">
			<a href="<%= user_signup_path %>" class= "btn btn-sm btn-info "><i class="fa fa-user-plus"  aria-hidden="true"></i> &nbsp;Add User</a>
		</div>
		<br>
		<div id="no-more-tables">
			<table class="col-md-10 col-sm-9 col-lg-10 table-bordered table-striped table-condensed cf">
  			<thead class="cf">
    			<tr>
      			<th>User ID</th>
						<th>Student ID</th>
      			<th>First Name</th>
						<th>Last Name</th>
						<th>Course</th>
						<th>Year Level</th>
						<th>Block</th>
						<th>Department</th>
						<th>View</th>
						<th>Edit</th>
						<th>Delete</th>
    			</tr>
  			</thead>
  			<tbody>
					<% @students.each do |student| %>
						<tr>
				  		<td data-title="User ID"><%= student.user.id %></td>
							<td data-title="Student ID"><%= student.user.id %></td>
							<td data-title="First Name"><%= student.user.first_name %></td>
							<td data-title="Last Name">	<%= student.user.last_name %></td>
							<td data-title="Course"><%= student.course.name %></td>
							<td data-title="Year Level"><%= student.year_level %></td>
							<td data-title="Block"><%= student.block.name %></td>
							<td data-title="Department"><%= student.department.name %></td>
			        <td data-title="View"><%= link_to '<button type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-search"></span></button>'.html_safe, student %></td>
							<td data-title="Edit"><%= link_to '<button type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-edit"></span></button>'.html_safe, edit_student_path(student) %></td>
							
			        <td data-title="Delete"><%= link_to '<button type="button" class = "btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>'.html_safe, student, method: :delete, 
																data: { confirm: 'Are you sure you want to delete this user?' } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="col-md-10 col-sm-9 col-lg-10 col-md-offset-3">
	<%= will_paginate @students, renderer: BootstrapPagination::Rails %>
</div>
			
