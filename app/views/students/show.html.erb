<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="/users/<%= current_user.id %>"><i class="fa fa-pie-chart"></i>Basic</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="<%= student_path(user_id: current_user.id) %>"><i class="fa fa-user-o"></i>Student</a>
  </li>
</ul>
<div class="container">
	<div class="row">
		<div class="col-lg-4 col-sm-6 col-md-offset-2">
    	<div class="card hovercard">
      	
<p>
  <strong>User ID:</strong>
	
  <%= @student.user_id %>
</p>
<p>
  <strong>Student ID:</strong>
  <%= @student.id %>
</p>

<p>
  <strong> Name:</strong>
  <%= @student.user.first_name %> &nbsp;<%= @student.user.last_name %>
</p>
<p>
  <strong>Course:</strong>
  <%= @student.course.name %>
</p>
<p>
  <strong>Block:</strong>
  <%= @student.block.name %>
</p>
<p>
  <strong>Year level:</strong>
  <%= @student.year_level %>
</p>
<p>subjects</p>
<table>
	<% @student.course.subjects.each do |subject| %>
		<tr>
  		<td><%= subject.name %></td>
			<td><%= subject.id %></td>
		</tr>
	<% end %>
</table>

<p>sections</p>
<table>
	<% @student.sections.each do |section| %>
		<tr>
  		<td><%= section.name %></td>
		</tr>
	<% end %>
</table>

<p>grades</p>
<table>
	<% @student.grades.each do |grade| %>
		<tr>
  		<td><%= grade.score %></td>
			<td><%= grade.section.name %></td>
		</tr>
	<% end %>
</table>

<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Back', students_path %>
			</div>
		</div>
	</div>
</div>