<%= form_for(@section) do |f| %>

	<h3>New Section</h3>
		<div class=" col-md-9 col-lg-9 "> 
			<table class="table table-user-information">
				<tbody>
					<tr>
	  				<td> <%= f.label :subject_id %>		</td>
	   				<td><%= f.collection_select(:subject_id, Subject.order('name asc'), :id, :name, { :prompt => 'Select Subject' }, class: "form-control")  %></td>
	  			</tr>
					<tr>
						<td>  <%= f.label :teacher_id %>	</td>
						<td><%= f.collection_select(:teacher_id, Teacher.order('id asc'), :id, :id_with_name, { :prompt => 'Select Teacher' }, class: "form-control")  %></td>
					</tr>
					<tr>
						<td><%= f.label :name %></td>
						<td> <%= f.text_field :name, class: "form-control" %></td>
					</tr>
					<tr>
						<td> <%= f.label :semester %></td>
						<td><%= f.select(:semester, options_for_select(['First', 'Second', 'Summer']), 
		     				  {},class: "chzn-select form-control") %></td>
					</tr>
					<tr>
						<td> <%= f.label :schedule %></td>
						<td><%= f.select(:schedule, options_for_select(['MWF 7:30-9:00', 
																									'MWF 9:00-10:30',
																									'MWF 10:30 -12:00',
																									'MWF 13:30-15:00',
																									'MWF 15:00-16:30',
																									'MWF 16:30-18:00',
																									'TTHS 7:30-9:00', 
																									'TTHS 9:00-10:30',
																									'TTHS 10:30 -12:00',
																									'TTHS 13:30-15:00',
																									'TTHS 15:00-16:30',
																									'TTHS 16:30-18:00'
																									]), 
			     				  {},class: "chzn-select form-control") %></td>
					</tr>
				</tbody>
			</table>
			<div class="actions">
				<%= f.submit "Submit", class: "btn btn-md btn-danger " %>
			</div>
		
	<% end %>
	
	
<div class="container">
	<div class="row custyle">
		<h3 class="text-center">Sections</h3>
		<div id="no-more-tables">
			<table class="col-md-10 col-sm-9 col-lg-10 table-bordered table-striped table-condensed cf">
  			<thead class="cf">
    			<tr>
      			<th>ID</th>
						<th>Name</th>
						<th>Subject</th>
						<th>Schedule</th>
						<th>Teacher</th>
						<th>Semester</th>
						<th>Department</th>
						<th>View</th>
						<th>Destroy</th>
    			</tr>
  			</thead>
  			<tbody>
					    <% @sections.each do |section| %>
						<tr>
							<td data-title="ID"><%= section.id %></td>
							<td data-title="Name"><%= section.name %></td>
							<td data-title="Subject"><%= section.semester %></td>
							<td data-title="Schedule"><%= section.schedule %></td>
							<td data-title="Teacher"><%= section.teacher.user.first_name%>&nbsp;<%= section.teacher.user.last_name%></td>
							<td data-title="Semester"><%= section.semester %></td>
							<td data-title="Department"><%= section.teacher.department.name %></td>
			        <td data-title="View"><%= link_to '<button type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-search"></span></button>'.html_safe, section %></td>
			        <td data-title="Delete"><%= link_to '<button type="button" class = "btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>'.html_safe, section, method: :delete, 
																data: { confirm: 'Are you sure you want to delete this department?' } %></td>
						</tr>
						
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
