<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name%></td>
				<td><%= section.schedule%></td>
				<td><%= section.semester%></td>
				<td><%= section.teacher.user.first_name%>&nbsp;<%= section.teacher.user.first_name%></td>
				<td><%= section.subject.name%></td>
        <td><%= link_to 'Show', section %></td>
				<% if can? :destroy, @section %>
        	<td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      	<% end %>
			</tr>
    <% end %>
  </tbody>
</table>

<br>
<%= form_for(@section) do |f| %>
  
	
<h3>new section</h3>
  <div class="field">
    <%= f.label :subject_id %>		
		<%= f.collection_select(:subject_id, Subject.order('name asc'), :id, :name, { :prompt => 'Select Subject' }, class: "form-control")  %>
  </div>
  <div class="field">
    <%= f.label :teacher_id %>		
		<%= f.collection_select(:teacher_id, Teacher.order('id asc'), :id, :id, { :prompt => 'Select Teacher' }, class: "form-control")  %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :semester %>
    <%= f.text_field :semester %>
  </div>
  <div class="field">
    <%= f.label :schedule %>
    <%= f.text_field :schedule %>
  </div>
	
  <div class="actions">
    <%= f.submit %>
  </div>
	<% end %>