<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name%></td>
				<td><%= section.schedule%></td>
				<td><%= section.semester%></td>
				<td><%= section.teacher.user.first_name%>&nbsp;<%= section.teacher.user.last_name%></td>
				<td><%= section.subject.name%></td>
        <td><%= link_to 'Show', section %></td>
				<% if can? :destroy, @section %>
        	<td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      	<% end %>
			</tr>
    <% end %>
  </tbody>
</table>

<br>
<%= form_for(@section) do |f| %>
  
	
<h3>new section</h3>
  <div class="field">
    <%= f.label :subject_id %>		
		<%= f.collection_select(:subject_id, Subject.order('name asc'), :id, :name, { :prompt => 'Select Subject' }, class: "form-control")  %>
  </div>
  <div class="field">
    <%= f.label :teacher_id %>		
		<%= f.collection_select(:teacher_id, Teacher.order('id asc'), :id, :id_with_name, { :prompt => 'Select Teacher' }, class: "form-control")  %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :semester %>
	<%= f.select(:semester, options_for_select(['First', 'Second', 'Summer']), 
	     				  {},class: "chzn-select") %>
  </div>
  <div class="field">
    <%= f.label :schedule %>
		<%= f.select(:schedule, options_for_select(['MWF 7:30-9:00', 
																								'MWF 9:00-10:30',
																								'MWF 10:30 -12:00',
																								'MWF 13:30-15:00',
																								'MWF 15:00-16:30',
																								'MWF 16:30-18:00',
																								'TTHS 7:30-9:00', 
																								'TTHS 9:00-10:30',
																								'TTHS 10:30 -12:00',
																								'TTHS 13:30-15:00',
																								'TTHS 15:00-16:30',
																								'TTHS 16:30-18:00'
																								]), 
		     				  {},class: "chzn-select") %>
  </div>
		
  <div class="actions">
    <%= f.submit %>
  </div>
	<% end %>