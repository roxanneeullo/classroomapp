
<h1>Users</h1>



<div class="container">
	<div class="row custyle">
		<h3 class="text-center">Users</h3>
		<div class="container">
			<a href="<%= user_signup_path %>" class= "btn btn-sm btn-info "><i class="fa fa-user-plus"  aria-hidden="true"></i> &nbsp;Add User</a>
		</div>
		<br>
		<div id="no-more-tables">
			<table class="col-md-12 table-bordered table-striped table-condensed cf">
  			<thead class="cf">
    			<tr>
      			<th>ID</th>
      			<th>First Name</th>
						<th>Last Name</th>
						<th>Username</th>
						<th>Gender</th>
						<th>Birthday</th>
						<th>Contact Number</th>
						<th>Role</th>
						<th>View</th>
						<th>Delete</th>
    			</tr>
  			</thead>
  			<tbody>
					<% @users.each do |user| %>
						<tr>
				  		<td data-title="ID"><%= user.id %></td>
							<td data-title="First Name"><%= user.first_name %></td>
							<td data-title="Last Name">	<%= user.last_name %></td>
							<td data-title="Username"><%= user.username %></td>
							<td data-title="Gender"><%= user.gender %></td>
							<td data-title="Birthday"><%= user.birthday %></td>
							<td data-title="Contact Number"><%= user.contact_number %></td>
							<td data-title="Role"><%= user.roles_mask %></td>
			        <td data-title="View"><%= link_to '<button type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-search"></span></button>'.html_safe, user %></td>
			        <td data-title="Delete"><%= link_to '<button type="button" class = "btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button>'.html_safe, user, method: :delete, 
																data: { confirm: 'Are you sure you want to delete this user?' } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
			

<br>

<i class="fa fa-user-plus" aria-hidden="true"></i><%= link_to 'Add user', user_signup_path %>
