
<h1>Users</h1>

<table>
  <thead>
    <tr>
			<th>ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Username</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Contact number</th>
			<th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.username %></td>
        <td><%= user.gender %></td>
        <td><%= user.birthday %></td>
        <td><%= user.contact_number %></td>
				<td><%= user.roles_mask %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

