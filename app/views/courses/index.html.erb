<div class="container">
	<div class="row custyle">
		<h3 class="text-center">Courses</h3>
		<div class="container">
			<a href="<%= new_course_path %>" class= "btn btn-sm btn-info ">
				<i class="fa fa-building"  aria-hidden="true"></i> &nbsp;Add Course
			</a>
		</div>
		<br>
		<div id="no-more-tables">
			<table class="col-md-10 table-bordered table-striped table-condensed cf">
  			<thead class="cf">
    			<tr>
      			<th>ID</th>
						<th>Name</th>
						<th>Manage</th>
    			</tr>
  			</thead>
  			<tbody>
					<% @courses.each do |course| %>
						<tr>
							<td data-title="ID"><%= course.id %></td>
							<td data-title="Name"><%= course.name %></td>
			        <td data-title="Manage"><%= link_to '<button type="button" class="btn btn-info btn-xs">
								<span class="glyphicon glyphicon-search"></span></button>'.html_safe, course %>
								<%= link_to '<button type="button" class="btn btn-info btn-xs">
								<span class="glyphicon glyphicon-edit"></span>
								</button>'.html_safe,  edit_course_path(course)  %>
								<%= link_to '<button type="button" class = "btn btn-danger btn-xs">
								<span class="glyphicon glyphicon-trash"></span></button>'.html_safe, course, method: :delete, 
								data: { confirm: 'Are you sure you want to delete this department?' } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="col-md-10 col-sm-9 col-lg-10 col-md-offset-3">
	<%= will_paginate @courses, renderer: BootstrapPagination::Rails %>
</div>

