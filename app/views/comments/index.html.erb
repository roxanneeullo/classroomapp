<p>
  <strong>Activity:</strong>
	<%= @activity.activity_type %><br>
	<%= @activity.content%>
	<%= @activity.section.name%>
</p>


<%= form_for (@comment) do |f| %>
	
  <div class="container">
		<div class="col-lg-12">
			<div class="account-wall">
    		<h5><%= f.label :comment %></h5>
					<%= f.text_area :context, size: "10x2", class: "form-control", required: "true", maxlength: 500, id: 'review_text' %>
			  <span id="counter" data-maximum-length="<%= @maximum_length %>"><%= @maximum_length %></span>
				<%= f.hidden_field :activity_id, value: @activity.id %>
				<%= f	.hidden_field :user_id, value: current_user.id %>
			
				<div class="container">
					<br>
				</div>
				<div class="pull-right">
					<%= f.submit "Post", class: "btn btn-lg btn-danger", id: 'post_btn'%>
				</div>
				<div class="container">
					<br>
				</div>
			</div>
  	</div>
	</div>
<% end %>


 <table>
 	<thead>
		<tr>
			<th colspan="3"></th>
		</tr>
   </thead>
 
   <tbody>
     <% @activity.comments.each do |comment| %>
     <tr>
 			<td><%= image_tag comment.user.avatar.url(:thumb) %></td>
 			<td></td>
 			<td>
 				<%= comment.user.first_name %><br/>
 				<%= comment.context %><br/>
 				<%= comment.created_at %>
 			</td>
 		</tr>
     <% end %>
   </tbody>
 </table>